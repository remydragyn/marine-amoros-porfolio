{% extends "base.html.twig" %}

{% block content %}
<div class="index-projects-container">
    <span class="prev-arrow index-arrow index-arrow-js"></span>
    <span class="next-arrow index-arrow index-arrow-js"></span>
    <ul class="projects-list">
        {% for project in  projects %}
        <li class="project-item">
            <div class="index-item-content">

                <div class="project-cover-container" style="background-image: url('{{ project.cover }}');"> 

                </div> 
                <div class="project-infos-container">
                    <span class="project-year">{{ project.year }}</span>
                    <h3 class="project-name">{{ project.title }}</h3>
                    <div class="projcet-description-container">
                        <p class="project-description">{{ project.description|raw }}</p>
                    </div>
                </div>
            </div>
        </li>
        {% endfor %}
    </ul>

</div>

{% endblock content %}