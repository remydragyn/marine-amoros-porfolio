{% extends "base.html.twig" %}

{% block dataPage %}home{% endblock dataPage %}

{% block content %}
<div class="index-projects-container projects-container">
    <span class="prev-arrow index-arrow index-arrow-js" data-direction="prev"></span>
    <span class="next-arrow index-arrow index-arrow-js" data-direction="next"></span>
    <ul class="projects-list projects-list-js">
        {% for project in  projects %}
        <li class="project-item project-item-js hidden">
            <a href="{{ getPath(router, 'projet', {slug: project.slug}) }}">
                <div class="project-item-content">

                    <div class="project-cover-container" style="background-image: url('{{ project.cover }}');"> 

                    </div> 
                    <div class="project-infos-container">
                        <span class="project-year">{{ project.year }}</span>
                        <h3 class="project-name">{{ project.title|raw }}</h3>
                        <div class="projcet-description-container">
                            <p class="project-description">{{ project.description|raw }}</p>
                        </div>
                    </div>
                </div>
            </a>
        </li>
        {% endfor %}
    </ul>

</div>
{% endblock content %}